@model MvcApplicationRUTH.Models.Delegates
@{
    ViewBag.Title = "DelegateEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<hgroup class="title">
    <h2>Edit Client</h2>
    <h4>@Html.ActionLink("List of  Delegates", "AllDelegate", "Home")</h4>
</hgroup>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <ol>
            <li>
                @Html.HiddenFor(model => model.delegateNoID)
                @Html.LabelFor(m => m.delegateTitle)
                @Html.TextBoxFor(m => m.delegateTitle)
                @Html.LabelFor(m => m.delegateFName)
                @Html.TextBoxFor(m => m.delegateFName)
                @Html.LabelFor(m => m.delegateLName)
                @Html.TextBoxFor(m => m.delegateLName)
                @Html.LabelFor(m => m.delegateStreet)
                @Html.TextBoxFor(m => m.delegateStreet)
                @Html.LabelFor(m => m.delegateCity)
                @Html.TextBoxFor(m => m.delegateCity)
                @Html.LabelFor(m => m.delegateState)
                @Html.TextBoxFor(m => m.delegateState)
                @Html.LabelFor(m => m.delegateZipCode)
                @Html.TextBoxFor(m => m.delegateZipCode)
                @Html.LabelFor(m => m.attTelNo)
                @Html.TextBoxFor(m => m.attTelNo)
                @Html.LabelFor(m => m.attFaxNo)
                @Html.TextBoxFor(m => m.attFaxNo)
                @Html.LabelFor(m => m.attEmailAddress)
                @Html.TextBoxFor(m => m.attEmailAddress)
                @Html.LabelFor(m => m.clientNoID)
                @Html.TextBoxFor(m => m.clientNoID)
            </li>
        </ol>
        <div class="col-md-offset-5 col-md-3">
            <input type="submit" value="Save" /> |
            @Html.ActionLink(" Back", null, null, null, new { href = Request.UrlReferrer })
        </div>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


