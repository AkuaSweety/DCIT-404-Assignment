@model MvcApplicationRUTH.Models.Client
@{
    ViewBag.Title = "Edit Client";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hgroup class="title">
    <h2>Edit Client</h2>
    <h4>@Html.ActionLink("List of  Client", "AllClient", "Home")</h4>
</hgroup>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <ol>
            <li>
                @Html.HiddenFor(model => model.clientNoID)
                @Html.LabelFor(m => m.clientName)
                @Html.TextBoxFor(m => m.clientName)
            </li>
        </ol>
        <div class="col-md-offset-5 col-md-3">
            <input type="submit" value="Save" /> |
            @Html.ActionLink(" Back", null, null, null, new { href = Request.UrlReferrer})
        </div>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
