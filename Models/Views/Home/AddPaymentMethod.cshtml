@model MvcApplicationRUTH.Models.PaymentMethod
@{
    ViewBag.Title = "AddPaymentMethod";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hgroup class="title">
    <h2>@Html.ActionLink("List of  Payment Method", "AllPaymentMethod", "Home")</h2>
</hgroup>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <ol>
            <li>
                @Html.LabelFor(m => m.methodName)
                @Html.TextBoxFor(m => m.methodName)
            </li>
        </ol>
        <div class="col-md-offset-5 col-md-3">
            <input type="submit" value="Save" /> |
            @Html.ActionLink(" Back", null, null, null, new { href = Request.UrlReferrer })
        </div>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
